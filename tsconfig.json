{
  "compilerOptions": {
    "target": "es5",
    "lib": ["es2015"],
    "rootDir": "src",
    "outDir": "dist",
    "module": "commonjs",
    "declaration": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "strictNullChecks": true,
    "removeComments": false,
    "sourceMap": true,
    "inlineSources": true
  }
}
